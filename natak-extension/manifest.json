{
    "manifest_version": 3,
    "name": "natak.io Media Saver",
    "version": "1.0.0",
    "description": "Save images and videos from Instagram and Pinterest directly to natak.io Asset DAM",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.instagram.com/*",
        "https://instagram.com/*",
        "https://www.pinterest.com/*",
        "https://pinterest.com/*",
        "https://*.pinimg.com/*",
        "https://*.cdninstagram.com/*",
        "http://localhost:3000/*",
        "https://natak.io/*",
        "https://www.natak.io/*"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/*",
                "https://instagram.com/*"
            ],
            "js": [
                "content/common.js",
                "content/instagram.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://www.pinterest.com/*",
                "https://pinterest.com/*"
            ],
            "js": [
                "content/common.js",
                "content/pinterest.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}